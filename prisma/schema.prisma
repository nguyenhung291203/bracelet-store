generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Category {
  id          Int               @id @default(autoincrement())
  name        String            @unique @db.VarChar(100)
  description String?           @db.Text
  products    ProductCategory[]

  createdAt DateTime @default(now())
  createdBy Int?

  updatedAt DateTime? @updatedAt
  updatedBy Int?

  deletedAt DateTime?
  deletedBy Int?
  isDeleted Boolean   @default(false)

  @@map("categories")
}

model Product {
  id          Int     @id @default(autoincrement())
  name        String  @db.VarChar(150)
  slug        String  @unique
  description String? @db.Text

  ratingAvg   Float @default(0)
  ratingCount Int   @default(0)

  sold Int @default(0)

  createdAt DateTime @default(now())
  createdBy Int?

  updatedAt DateTime? @updatedAt
  updatedBy Int?

  deletedAt DateTime?
  deletedBy Int?
  isDeleted Boolean   @default(false)

  categories ProductCategory[]
  variants   ProductVariant[]
  images     Json?
  reviews    Review[]

  @@map("products")
}

model ProductCategory {
  productId  Int
  categoryId Int

  product  Product  @relation(fields: [productId], references: [id])
  category Category @relation(fields: [categoryId], references: [id])

  isPrimary Boolean @default(false)

  createdAt DateTime @default(now())
  createdBy Int?

  deletedAt DateTime?
  deletedBy Int?
  isDeleted Boolean   @default(false)

  @@id([productId, categoryId])
  @@map("product_categories")
}

model Size {
  id    Int    @id @default(autoincrement())
  name  String
  value Int

  variants ProductVariant[]

  createdAt DateTime @default(now())
  createdBy Int?

  updatedAt DateTime? @updatedAt
  updatedBy Int?

  deletedAt DateTime?
  deletedBy Int?
  isDeleted Boolean   @default(false)

  @@map("sizes")
}

model Color {
  id   Int    @id @default(autoincrement())
  name String
  code String

  variants ProductVariant[]

  createdAt DateTime @default(now())
  createdBy Int?

  updatedAt DateTime? @updatedAt
  updatedBy Int?

  deletedAt DateTime?
  deletedBy Int?
  isDeleted Boolean   @default(false)

  @@map("colors")
}

model ProductVariant {
  id Int @id @default(autoincrement())

  productId Int
  product   Product @relation(fields: [productId], references: [id])

  sizeId Int?
  size   Size? @relation(fields: [sizeId], references: [id])

  colorId Int?
  color   Color? @relation(fields: [colorId], references: [id])

  price    Int?
  quantity Int  @default(0)

  sku      String? @unique
  isActive Boolean @default(true)

  createdAt DateTime @default(now())
  createdBy Int?

  updatedAt DateTime? @updatedAt
  updatedBy Int?

  deletedAt DateTime?
  deletedBy Int?
  isDeleted Boolean   @default(false)

  @@unique([productId, sizeId, colorId])
  @@map("product_variants")
}

model Review {
  id        Int     @id @default(autoincrement())
  productId Int
  product   Product @relation(fields: [productId], references: [id])

  rating  Int
  comment String?

  createdAt DateTime @default(now())
  createdBy Int?

  deletedAt DateTime?
  deletedBy Int?
  isDeleted Boolean   @default(false)

  @@map("reviews")
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique @db.VarChar(255)
  fullName String @db.VarChar(100)
  password String @db.VarChar(255)

  role Role @default(CUSTOMER)

  createdAt DateTime @default(now())
  createdBy Int?

  updatedAt DateTime? @updatedAt
  updatedBy Int?

  deletedAt DateTime?
  deletedBy Int?
  isDeleted Boolean   @default(false)

  tokens Token[]

  @@map("users")
}

enum Role {
  ADMIN
  EMPLOYEE
  CUSTOMER
}
model Token {
  id        Int       @id @default(autoincrement())
  userId    Int
  token     String    @db.Text
  type      TokenType
  expiresAt DateTime
  createdAt DateTime  @default(now())
  createdBy Int?
  updatedAt DateTime? @updatedAt
  updatedBy Int?
  deletedAt DateTime?
  deletedBy Int?
  isDeleted Boolean   @default(false)

  user User @relation(fields: [userId], references: [id])

  @@map("tokens")
}


enum TokenType {
  REFRESH
  ACCESS
}
